{
  "name": "ai-swiss-army-template",
  "private": true,
  "packageManager": "bun@1.3.7",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=web",
    "dev:convex": "turbo dev --filter=convex",
    "dev:api": "turbo dev --filter=api",
    "dev:worker": "turbo dev --filter=worker",
    "build": "turbo build",
    "typecheck": "turbo typecheck",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "turbo format",
    "eval": "turbo eval",
    "clean": "turbo clean && rm -rf node_modules",
    "check:versions": "bun tooling/scripts/check-versions.ts"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "prettier": "3.8.1",
    "turbo": "2.7.6",
    "typescript": "5.9.3"
  }
}
